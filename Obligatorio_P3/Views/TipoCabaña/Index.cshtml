@model IEnumerable<HotelDeCabañas.Entidades.TipoCabaña>

<h4>Filtrar por el nombre de tipo:</h4>
<br />
<br />

<form method="post">

    <input type="text" name="nombreTipo"><input type="submit" value="Buscar">

</form>

<br />
<br />


<h1>Lista de todos los tipos de cabañas disponibles:</h1>
<p>


</p>

<p>@ViewBag.msg</p>

@if (Model != null)
{
    <table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Costo por huesped
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTipo)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.Descripcion.Valor)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.costoPorHuesped)
                </td>
                <td>
                     @Html.ActionLink("Borrar", "Delete", "TipoCabaña", new {  NombreTipo=item.NombreTipo })
                     @Html.ActionLink("Editar", "Edit", "TipoCabaña", new {  NombreTipo=item.NombreTipo })
                     
                </td>
            </tr>
        }
    </tbody>
</table>
}

<div>
    <a asp-action="Index">Mostrar todos los tipos</a>
</div>


