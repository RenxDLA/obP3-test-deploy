@using HotelDeCabañas.Entidades
@model HotelDeCabañas.Entidades.Mantenimiento


<h1>Alta mantenimiento de cabaña @ViewBag.cab.Nombre</h1>

<hr />
<div class="row">
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Nro. de Habitacion
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cab.NroHabitacion
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cab.Nombre
            </dd>
            <dt class="col-sm-2">
                Descripcion
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cab.Descripcion.Valor
            </dd>
            <dt class="col-sm-2">
                Jacuzzi
            </dt>
            <dd class="col-sm-10">
                @if (ViewBag.cab.tieneJacuzzi == true)
                {
                    <td>Cuenta con jacuzzi.</td>
                }
                else
                {
                    <td>No cuenta con jacuzzi.</td>
                }
            </dd>
            <dt class="col-sm-2">
                Tipo
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cab.NombreTipo
            </dd>
            <dt class="col-sm-2">
                Habilitada
            </dt>
            <dd class="col-sm-10">
                @if (ViewBag.cab.estaHabilitada == true)
                {
                    <td>Esta habilitada.</td>
                }
                else
                {
                    <td>No esta habilitada.</td>
                }
            </dd>
            <dt class="col-sm-2">
                Capacidad
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cab.cantMax
            </dd>
            <dt class="col-sm-2">
                Foto
            </dt>
            <dd class="col-sm-10">
                <img width="50%" class="img-thumbnail" src="~/imagenes/fotos/@ViewBag.cab.Foto" />
            </dd>
        </dl>
    <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label">Fecha</label>
                <input type="date" asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripcion</label>
                <textarea asp-for="Descripcion" class="form-control"><</textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo.Valor" class="control-label">Costo</label>
                <input type="number" asp-for="Costo.Valor" class="form-control" name="costo"/>
                <span asp-validation-for="Costo.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label">Nombre Empleado</label>
                <input type="text" asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroHabitacion" class="control-label">Nro. Habitacion</label>
                <input asp-for="NroHabitacion" class="form-control" readonly />
                <span asp-validation-for="NroHabitacion" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>     
        <br>
        <p>@ViewBag.msg</p>
    </div>
</div>

<div>
    <a asp-controller="Cabaña" asp-action="Index">Volver a lista cabañas</a>
    <br>
    <a asp-controller="Cabaña" asp-action="CabañasHabilitadas">Volver a cabañas habilitadas </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
